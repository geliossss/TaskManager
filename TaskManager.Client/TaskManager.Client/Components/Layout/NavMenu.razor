@using TaskManager.Client.Services
@inject AuthService Auth
@inject NavigationManager Navigation


<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Задания
            </NavLink>
        </div>

        @if (!Auth.IsAuthenticated)
        {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Регистрация
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Вход
                    </NavLink>
                </div>
        }
        else
        {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Личный кабинет
                    </NavLink>
                </div>
        }
    </nav>
</div>

@code {
    private void Logout()
    {
        Auth.Logout(); // Выход из системы
        Navigation.NavigateTo("/login", true); // Перенаправление на страницу логина с полной перезагрузкой страницы
    }
}
